#!/bin/busybox sh

# Mount the /proc and /sys filesystems.
mount -t proc none /proc
mount -t sysfs none /sys

# Boot real things.

# NIC up
ip link set eth0 up
ip addr add 10.0.2.15/24 dev eth0
ip link set lo up

# Wait for NIC ready
sleep 0.5

if [ ! -d /mnt ]; then
  mkdir /mnt
fi
mount -t nfs -o nolock host_machine:/root/workspace/cicv-r4l-3-yinheli/r4l_experiment/driver /mnt
mount -t devpts devpts  /dev/pts

telnetd -l /bin/sh


# Make the new shell as a login shell with -l option
# Only login shell read /etc/profile
setsid sh -c 'exec sh -l </dev/ttyS0 >/dev/ttyS0 2>&1'


